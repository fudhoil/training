<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="parent_template">
        <t t-set="dark_class" t-value="dark_theme ? 'bg-dark text-white' : ''"/>
        <div t-attf-class="o_content {{ dark_class }}" style="display: flex; flex-direction: column; height: 100%;">
            <div class="p-3">
                <button id="btn_notification" class="btn btn-primary">Notification</button>
                <button id="btn_dialog" class="btn btn-primary ms-2">Dialog</button>
                <button id="btn_effect" class="btn btn-primary ms-2">Effect</button>
                <button id="btn_cookie" class="btn btn-primary ms-2">Cookie</button>
                <button id="btn_http_get" class="btn btn-primary ms-2">HTTP Get</button>
                <button id="btn_http_post" class="btn btn-primary ms-2">HTTP Post</button>
                <button id="btn_rpc" class="btn btn-primary ms-2">RPC</button>
                <button id="btn_action" class="btn btn-primary ms-2">Action</button>
                <button id="btn_router" class="btn btn-primary ms-2">Router</button>
                <button id="btn_user" class="btn btn-primary ms-2">User</button>
                <button id="btn_company" class="btn btn-primary ms-2">Company</button>
                <input type="text" id="email_input" class="form-control mt-2" placeholder="Enter email"/>

                <div class="mt-4">
                    <t t-if="output_data">
                        <t t-if="output_data.label">
                            <span t-esc="output_data.label"/>
                            <span> = </span>
                            <span t-if="typeof output_data.value === 'object'">
                                <pre style="display:inline;white-space:pre-wrap;word-break:break-all;"> <t t-esc="JSON.stringify(output_data.value, null, 2)"/></pre>
                            </span>
                            <span t-else="">
                                <t t-esc="output_data.value"/>
                            </span>
                        </t>
                        <t t-else="">
                            <span t-esc="output_data"/>
                        </t>
                    </t>
                </div>
                
            </div>
        </div>
    </t>
</templates>